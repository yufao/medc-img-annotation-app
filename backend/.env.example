#############################################
# Backend Environment Example (.env.example)
# Copy to .env and adjust. This file is kept in git; .env is ignored.
#############################################

# Primary Mongo connection (override to point to your server / cluster)
# Format: mongodb://USER:PASS@host:port/
MONGO_URI=mongodb://localhost:27017/

# Logical database name (avoid使用 local / test / admin 这类通用名字)
MONGO_DB=medical_annotation

# (Backward compatibility; if set they override above)
# MONGODB_URI=
# MONGODB_DB=

# App environment: development | production | test
APP_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security (change in production!)
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me-jwt

# Optional upload path
# UPLOAD_FOLDER=app/static/img

# Logging
LOG_LEVEL=INFO

# If you previously used a remote Windows MongoDB from WSL, set MONGO_URI like:
#   MONGO_URI=mongodb://192.168.xxx.xxx:27017/
# or expose via SSH tunnel:
#   ssh -N -L 27018:localhost:27017 user@remote && MONGO_URI=mongodb://localhost:27018/
