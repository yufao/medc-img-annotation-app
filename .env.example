# 项目配置示例文件
# 复制此文件为 .env 并根据实际环境修改

# 项目配置
PROJECT_NAME=medc-prod
DOCKER_USERNAME=yfsdk
IMAGE_TAG=latest

# 端口配置
HTTP_PORT=80
HTTPS_PORT=443
FRONTEND_PORT=3000
BACKEND_PORT=5000
MONGO_PORT=27017

# 数据库配置
MONGODB_DB=medcimgdb

# 安全配置 (部署时需要修改)
SECRET_KEY=your-production-secret-key-change-this
JWT_SECRET_KEY=your-production-jwt-secret-key-change-this

# 路径配置
DATA_PATH=./data
CONFIG_PATH=./config

# 调试配置
FLASK_DEBUG=false

# API配置
API_BASE_URL=http://localhost:5000